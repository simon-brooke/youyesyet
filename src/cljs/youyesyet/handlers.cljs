(reg-event-db
  :initialize-db
  (fn [_ _]
    db/default-db))

(reg-event-db
  :set-active-page
  (fn [db [_ page]]
    (assoc db :page page)))

(reg-event-db
  :set-issue
  (fn [db [_ issue]]
    (assoc (assoc db :issue issue) :page :issue)))
